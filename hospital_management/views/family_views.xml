<odoo>
    <data>
        <record id="wb_family_tree_view" model="ir.ui.view">
            <field name="name">wb.family.tree.view</field>
            <field name="model">wb.family</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="relation"/>
                    <field name="age"/>
                    <field name="diseased"/>
                </tree>
            </field>
        </record>

        <record id="wb_family_form_view" model="ir.ui.view">
            <field name="name">wb.family.form.view</field>
            <field name="model">wb.family</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="relation"/>
                            <field name="age"/>
                            <field name="diseased"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>
    </data>
</odoo>